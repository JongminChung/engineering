{
  "name": "engineering",
  "private": true,
  "packageManager": "pnpm@10.30.1",
  "workspaces": [
    "frontend/*",
    "platform/*",
    "me/*",
    "perf-test/*"
  ],
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "check": "biome check --write --unsafe",
    "check:prettier": "prettier --write **/*.md"
  },
  "engines": {
    "pnpm": ">=10.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "catalog:"
  },
  "lint-staged": {
    "**/*.md": "prettier --write",
    "**/*.{js,jsx,ts,tsx,json,html,css}": "biome check --write --unsafe",
    "**/*.java": "sh -c './gradlew spotlessApply'"
  }
}
