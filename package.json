{
  "name": "engineering",
  "private": true,
  "workspaces": [
    "frontend/*",
    "platform/*",
    "me/*"
  ],
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "check": "biome check --write --unsafe",
    "check:prettier": "prettier --write **/*.{md,yml,yaml}"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": "^24"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/bun": "^1.3.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0"
  },
  "lint-staged": {
    "**/*.{md,yml,yaml}": "prettier --write",
    "**/*.{js,jsx,ts,tsx,json,html,css}": "biome check --write --unsafe",
    "**/*.java": "sh -c './gradlew spotlessApply'"
  }
}
